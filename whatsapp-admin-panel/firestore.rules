rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función auxiliar para verificar rol de super_admin
    function isSuperAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    // Usuarios: Dueño o Super Admin
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      
      // Proyectos: Dueño o Super Admin
      match /projects/{projectId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
        
        // Agentes: Dueño o Super Admin
        match /agents/{agentId} {
          allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
        }
      }
    }
    
    // Acceso público de solo lectura para que el widget pueda leer la config
    // (Opcional: si quieres que el widget lea directamente de Firebase)
    match /public/{projectId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
